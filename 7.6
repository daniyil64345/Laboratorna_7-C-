#include <iostream>
using namespace std;

int main() {
    unsigned long long c0;
    int steps = 0;

    cout << "Enter a positive integer: ";
    cin >> c0;

    if (c0 == 0) {
        cout << "Number must be positive and non-zero!" << endl;
        return 0;
    }

    cout << "Starting Collatz sequence:" << endl;
    cout << c0 << endl;

    while (c0 != 1) {
        if (c0 % 2 == 0) {
            c0 /= 2;
        }
        else {
            c0 = 3 * c0 + 1;
        }
        steps++;
        cout << c0 << endl;
    }

    cout << "Total steps: " << steps << endl;

    return 0;
}
